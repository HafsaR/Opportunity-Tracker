@model Opportunity
@{
    string actionString = "Create";
    string buttonText = "Add";
     ViewData["Title"]="Tell us about a new Job Opportunity!";
     if(ViewBag.Editing){
         actionString = "Update";
         buttonText = "Update";
         ViewData["Title"] = "Update Opportunity";
     }
}

<div id="content-wrap">
    <h3 style="text-align: center; color: teal;">@ViewData["Title"]</h3>
    <form id="opportunity-form" asp-action="@actionString">
         <input type="hidden" asp-for="Id"/>
        <div class="form-group row">
            <label asp-for="CompanyName" class="col-sm-2 col-form-label">Company Name: </label>
            <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="CompanyName" placeholder="eg Facebook">
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Role" class="col-sm-2 col-form-label">Job Title: </label>
            <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="Role" placeholder="eg. Software Developer">
            </div>
        </div>

         <div class="form-group row">
            <label asp-for="Link" class="col-sm-2 col-form-label">Application URL: </label>
            <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="Link" placeholder="eg. http://www.example.com">
            </div>
        </div>

         <div class="form-group row">
            <label asp-for="Date" class="col-sm-2 col-form-label">Apply By</label>
            <div class="col-sm-10">
            <input type="date" class="form-control" asp-for="Date" placeholder="eg. dd/mm/yyyy">
            </div>
        </div>

         <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="Status">Status</label>
            <div class="col-sm-10">
                <select class="form-control" id="status" asp-for="Status">
                <option selected>Choose...</option>
                <option value="Saved">Saved</option>
                <option value="Active">Active</option>
                <option value="Pending">Pending</option>
                <option value="Submitted">Submitted</option>
                <option value="Closed">Closed</option>
               
            </select>
            </div>
           
        </div>
         <div class="form-group row">

             <label asp-for="JobDescription" class="col-sm-2 col-form-label">Job Description: </label>
              <div class="col-sm-10">
                   <textarea wrap="hard" class="form-control" id="note" asp-for="JobDescription" rows="5"></textarea>
              </div>
          
        </div>
       
        <div class="form-group row">

             <label asp-for="Note" class="col-sm-2 col-form-label">Note</label>
              <div class="col-sm-10">
                   <textarea class="form-control" id="note" asp-for="Note" rows="3"></textarea>
              </div>
          
        </div>
        <div class="p-3 form-group row float-right">
            <div class="col-mb-2 p-3">
                 <button type="submit" class="btn btn-primary mb-2">@buttonText</button>
            </div>
            <div class="col-mb-2 p-3">
                 <button type="reset" class="btn btn-secondary mb-2">CANCEL</button>
            </div>
        </div>
        </form>
</div>